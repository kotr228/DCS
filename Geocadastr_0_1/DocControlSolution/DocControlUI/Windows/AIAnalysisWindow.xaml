<Window x:Class="DocControlUI.Windows.AIAnalysisWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="🤖 AI Аналіз та Оптимізація" 
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Background="#673AB7" Padding="15">
            <StackPanel>
                <TextBlock Text="🤖 AI Core - Штучний Інтелект" 
                           FontSize="20" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="Аналіз, оптимізація та генерація карт проектів" 
                           FontSize="12" Foreground="White" Opacity="0.8" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Основний контент -->
        <TabControl Grid.Row="1" Margin="10">

            <!-- Вкладка: Аналіз структури -->
            <TabItem Header="📂 Аналіз структури">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="200"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
                        <Button Content="🔍 Аналізувати" Click="AnalyzeStructure_Click" 
                                Background="#4CAF50" Foreground="White" Padding="15,8"/>
                        <Button Content="✅ Застосувати рекомендації" Click="ApplyRecommendations_Click" 
                                Margin="10,0,0,0" Padding="15,8"/>
                        <TextBlock x:Name="AnalysisStatusText" Text="" 
                                   VerticalAlignment="Center" Margin="20,0,0,0" FontWeight="Bold"/>
                    </StackPanel>

                    <GroupBox Grid.Row="1" Header="🚨 Виявлені порушення" Margin="10">
                        <DataGrid x:Name="ViolationsGrid" AutoGenerateColumns="False" IsReadOnly="True">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Тип" Binding="{Binding Type}" Width="150"/>
                                <DataGridTextColumn Header="Файл" Binding="{Binding FilePath}" Width="300"/>
                                <DataGridTextColumn Header="Опис" Binding="{Binding Description}" Width="*"/>
                                <DataGridTextColumn Header="Рекомендований шлях" Binding="{Binding SuggestedPath}" Width="250"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </GroupBox>

                    <GroupBox Grid.Row="2" Header="💡 AI Рекомендації" Margin="10">
                        <ListBox x:Name="RecommendationsList">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="5">
                                        <TextBlock Text="{Binding Title}" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding Description}" TextWrapping="Wrap" 
                                                   Foreground="Gray" Margin="0,3,0,0"/>
                                        <TextBlock Text="{Binding Priority, StringFormat='Пріоритет: {0}'}" 
                                                   FontSize="10" Foreground="Orange" Margin="0,3,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </GroupBox>
                </Grid>
            </TabItem>

            <!-- Вкладка: Хронологічні карти -->
            <TabItem Header="📅 Хронологічна карта">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
                        <Button Content="🤖 Згенерувати карту" Click="GenerateChronoRoadmap_Click" 
                                Background="#2196F3" Foreground="White" Padding="15,8"/>
                        <Button Content="💾 Експорт JSON" Click="ExportChronoJson_Click" 
                                Margin="10,0,0,0" Padding="15,8"/>
                        <Button Content="📤 Надіслати до сервісу" Click="SendToMainService_Click" 
                                Margin="10,0,0,0" Background="#FF9800" Foreground="White" Padding="15,8"/>
                    </StackPanel>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="10">
                        <ItemsControl x:Name="ChronoEventsView">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#2196F3" BorderThickness="0,0,0,2" 
                                            Margin="0,5" Padding="10" Background="#F5F5F5">
                                        <StackPanel>
                                            <TextBlock Text="{Binding EventDate, StringFormat='📅 {0:dd.MM.yyyy HH:mm}'}" 
                                                       FontWeight="Bold" Foreground="#2196F3"/>
                                            <TextBlock Text="{Binding Title}" FontSize="16" 
                                                       FontWeight="Bold" Margin="0,5,0,0"/>
                                            <TextBlock Text="{Binding Description}" TextWrapping="Wrap" 
                                                       Margin="0,5,0,0"/>
                                            <TextBlock Text="{Binding Category, StringFormat='Категорія: {0}'}" 
                                                       FontSize="10" Foreground="Gray" Margin="0,5,0,0"/>
                                            <TextBlock Text="{Binding RelatedFiles.Count, StringFormat='Файлів: {0}'}" 
                                                       FontSize="10" Foreground="Gray"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <GroupBox Grid.Row="2" Header="🤖 AI Insights" Margin="10" Height="150">
                        <ScrollViewer>
                            <TextBlock x:Name="AIInsightsText" TextWrapping="Wrap" Padding="10"/>
                        </ScrollViewer>
                    </GroupBox>
                </Grid>
            </TabItem>

            <!-- Вкладка: Геокарти AI -->
            <TabItem Header="🗺️ Геокарти AI">
                <Grid>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="🗺️ AI Геокарти" FontSize="24" FontWeight="Bold" 
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Автоматичне витягування локацій з файлів" 
                                   FontSize="14" Foreground="Gray" Margin="0,10,0,0" 
                                   HorizontalAlignment="Center"/>
                        <Button Content="🤖 Згенерувати геокарту" Click="GenerateGeoRoadmap_Click" 
                                Margin="0,20,0,0" Padding="20,10" Background="#4CAF50" 
                                Foreground="White" FontSize="16"/>
                        <TextBlock Text="(Функція в розробці)" FontSize="12" Foreground="Gray" 
                                   Margin="0,10,0,0" HorizontalAlignment="Center" FontStyle="Italic"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Вкладка: Статус AI -->
            <TabItem Header="⚙️ AI Статус">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <GroupBox Grid.Row="0" Header="🤖 Ollama Status" Margin="0,0,0,20">
                        <StackPanel Margin="10">
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <TextBlock Text="Статус:" Width="150" FontWeight="Bold"/>
                                <TextBlock x:Name="OllamaStatusText" Text="Перевірка..." FontWeight="Bold"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <TextBlock Text="Модель:" Width="150" FontWeight="Bold"/>
                                <TextBlock x:Name="ModelNameText" Text="-"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <TextBlock Text="Модель завантажена:" Width="150" FontWeight="Bold"/>
                                <TextBlock x:Name="ModelLoadedText" Text="-"/>
                            </StackPanel>
                            <Button Content="🔄 Перевірити підключення" Click="CheckOllama_Click" 
                                    Margin="0,15,0,0" Padding="10,5" HorizontalAlignment="Left"/>
                        </StackPanel>
                    </GroupBox>

                    <GroupBox Grid.Row="1" Header="📊 Статистика AI" Margin="0,0,0,20">
                        <StackPanel Margin="10">
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <TextBlock Text="Всього аналізів:" Width="200"/>
                                <TextBlock x:Name="TotalAnalysesText" Text="0" FontWeight="Bold"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <TextBlock Text="Останній аналіз:" Width="200"/>
                                <TextBlock x:Name="LastAnalysisText" Text="-"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <TextBlock Text="Виявлено порушень:" Width="200"/>
                                <TextBlock x:Name="TotalViolationsText" Text="0" FontWeight="Bold" Foreground="Red"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <TextBlock Text="Застосовано рекомендацій:" Width="200"/>
                                <TextBlock x:Name="AppliedRecommendationsText" Text="0" FontWeight="Bold" Foreground="Green"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>

                    <GroupBox Grid.Row="2" Header="📖 Інструкції">
                        <ScrollViewer>
                            <TextBlock TextWrapping="Wrap" Padding="10">
                                <Run Text="🤖 Як використовувати AI модуль:" FontWeight="Bold" FontSize="14"/><LineBreak/><LineBreak/>
                                <Run Text="1. Переконайтеся що Ollama запущений (ollama serve)"/><LineBreak/>
                                <Run Text="2. Завантажте модель: ollama pull llama3"/><LineBreak/>
                                <Run Text="3. Виберіть директорію для аналізу"/><LineBreak/>
                                <Run Text="4. Натисніть 'Аналізувати' для перевірки структури"/><LineBreak/>
                                <Run Text="5. Перегляньте AI рекомендації"/><LineBreak/>
                                <Run Text="6. Застосуйте рекомендації автоматично або вручну"/><LineBreak/><LineBreak/>
                                <Run Text="📅 Хронологічні карти:" FontWeight="Bold"/><LineBreak/>
                                <Run Text="- AI аналізує файли за датами"/><LineBreak/>
                                <Run Text="- Створює події на основі змін"/><LineBreak/>
                                <Run Text="- Генерує insights про проект"/><LineBreak/><LineBreak/>
                                <Run Text="🗺️ Геокарти:" FontWeight="Bold"/><LineBreak/>
                                <Run Text="- Витягує локації з PDF, DOCX"/><LineBreak/>
                                <Run Text="- Створює геоприв'язку до файлів"/><LineBreak/>
                                <Run Text="- Експортує в JSON для головного сервісу"/><LineBreak/>
                            </TextBlock>
                        </ScrollViewer>
                    </GroupBox>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Статус бар -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock x:Name="StatusBarText" Text="Готово"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>