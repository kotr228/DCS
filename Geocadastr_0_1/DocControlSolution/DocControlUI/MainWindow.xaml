<Window x:Class="DocControlUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="DocControl Service Manager" 
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="MinWidth" Value="100"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Панель статусу -->
        <Border Grid.Row="0" Background="#2196F3" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Статус сервісу:" FontWeight="Bold" Foreground="White"/>
                    <TextBlock x:Name="StatusText" Text="Невідомо" Margin="10,0,0,0" Foreground="White"/>
                </StackPanel>

                <Button Grid.Column="1" Content="Оновити статус" Click="RefreshStatus_Click" 
                        Background="White" Foreground="#2196F3"/>
            </Grid>
        </Border>

        <!-- Головний контент -->
        <TabControl Grid.Row="1" Margin="10" x:Name="MainTabControl">

            <!-- Вкладка Директорії -->
            <TabItem Header="📁 Директорії">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Панель управління -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
                        <Button Content="➕ Додати" Click="AddDirectory_Click"/>
                        <Button Content="✏️ Перейменувати" Click="RenameDirectory_Click"/>
                        <Button Content="🔍 Сканувати" Click="ScanDirectory_Click"/>
                        <Button Content="🗑️ Видалити" Click="RemoveDirectory_Click"/>
                        <Separator Width="20" Background="Transparent"/>
                        <Button Content="🔓 Відкрити всі" Click="OpenAllShares_Click" Background="#4CAF50" Foreground="White"/>
                        <Button Content="🔒 Закрити всі" Click="CloseAllShares_Click" Background="#F44336" Foreground="White"/>
                    </StackPanel>

                    <!-- Список директорій -->
                    <DataGrid Grid.Row="1" x:Name="DirectoriesGrid" 
                              AutoGenerateColumns="False" 
                              IsReadOnly="True"
                              SelectionMode="Single"
                              CanUserAddRows="False"
                              SelectionChanged="DirectoriesGrid_SelectionChanged"
                              Margin="5">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                            <DataGridTextColumn Header="Назва" Binding="{Binding Name}" Width="200"/>
                            <DataGridTextColumn Header="Шлях" Binding="{Binding Browse}" Width="*"/>
                            <DataGridCheckBoxColumn Header="Відкрито" Binding="{Binding IsShared, Mode=OneWay}" Width="80"/>
                            <DataGridTextColumn Header="Дозволені пристрої" Binding="{Binding AllowedDevicesCount, Mode=OneWay}" Width="150"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Деталі -->
                    <GroupBox Grid.Row="2" Header="Дозволені пристрої" Margin="5" Padding="5">
                        <ListBox x:Name="AllowedDevicesList" Height="100"/>
                    </GroupBox>
                </Grid>
            </TabItem>

            <!-- Вкладка Пристрої -->
            <TabItem Header="💻 Пристрої">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Панель управління -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
                        <Button Content="➕ Додати пристрій" Click="AddDevice_Click"/>
                        <Button Content="🗑️ Видалити пристрій" Click="RemoveDevice_Click"/>
                    </StackPanel>

                    <!-- Список пристроїв -->
                    <DataGrid Grid.Row="1" x:Name="DevicesGrid" 
                              AutoGenerateColumns="False" 
                              IsReadOnly="True"
                              SelectionMode="Single"
                              CanUserAddRows="False"
                              Margin="5">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                            <DataGridTextColumn Header="Назва пристрою" Binding="{Binding Name}" Width="*"/>
                            <DataGridCheckBoxColumn Header="Дозволено доступ" Binding="{Binding Access, Mode=OneWay}" Width="150"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Управління доступом -->
                    <GroupBox Grid.Row="2" Header="Керування доступом" Margin="5" Padding="10">
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="Директорія:"/>
                                <ComboBox Grid.Column="1" x:Name="AccessDirectoryCombo" 
                                          DisplayMemberPath="Name" Margin="5"/>

                                <TextBlock Grid.Column="2" Text="Пристрій:"/>
                                <ComboBox Grid.Column="3" x:Name="AccessDeviceCombo" 
                                          DisplayMemberPath="Name" Margin="5"/>

                                <StackPanel Grid.Column="4" Orientation="Horizontal">
                                    <Button Content="✅ Надати доступ" Click="GrantAccess_Click" 
                                            Background="#4CAF50" Foreground="White"/>
                                    <Button Content="❌ Відкликати доступ" Click="RevokeAccess_Click" 
                                            Background="#F44336" Foreground="White"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </GroupBox>
                </Grid>
            </TabItem>

            <!-- Вкладка Контроль версій -->
            <TabItem Header="🔄 Контроль версій">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="200"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
                        <Button Content="🔄 Виконати коміт" Click="ForceCommit_Click" Background="#4CAF50" Foreground="White"/>
                        <Button Content="⏪ Відкат версії" Click="RevertVersion_Click"/>
                        <Button Content="🔍 Історія комітів" Click="ShowCommitHistory_Click"/>
                        <Button Content="🔃 Оновити" Click="RefreshVersionControl_Click"/>
                    </StackPanel>

                    <GroupBox Grid.Row="1" Header="Статус контролю версій директорій" Margin="5">
                        <DataGrid x:Name="VersionControlGrid" 
                                  AutoGenerateColumns="False" 
                                  IsReadOnly="True"
                                  SelectionMode="Single">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Директорія" Binding="{Binding DirectoryName}" Width="200"/>
                                <DataGridTextColumn Header="Статус Git" Binding="{Binding GitStatus}" Width="100"/>
                                <DataGridTextColumn Header="Останній коміт" Binding="{Binding LastCommit}" Width="*"/>
                                <DataGridTextColumn Header="Час" Binding="{Binding LastCommitTime}" Width="150"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </GroupBox>

                    <GroupBox Grid.Row="2" Header="Лог комітів" Margin="5">
                        <DataGrid x:Name="CommitLogGrid" 
                                  AutoGenerateColumns="False" 
                                  IsReadOnly="True">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Час" Binding="{Binding Timestamp}" Width="150"/>
                                <DataGridTextColumn Header="Директорія" Binding="{Binding DirectoryPath}" Width="200"/>
                                <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="100"/>
                                <DataGridTextColumn Header="Повідомлення" Binding="{Binding Message}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </GroupBox>
                </Grid>
            </TabItem>

            <!-- Вкладка Помилки -->
            <TabItem Header="⚠️ Помилки">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
                        <TextBlock Text="Непрочитаних помилок:" VerticalAlignment="Center" FontWeight="Bold"/>
                        <TextBlock x:Name="UnresolvedErrorsCount" Text="0" Margin="5" VerticalAlignment="Center" Foreground="Red" FontWeight="Bold"/>
                        <Button Content="🔃 Оновити" Click="RefreshErrors_Click" Margin="10,0,0,0"/>
                        <Button Content="✅ Позначити як вирішені" Click="MarkErrorsResolved_Click"/>
                        <Button Content="🗑️ Очистити вирішені" Click="ClearResolvedErrors_Click"/>
                    </StackPanel>

                    <DataGrid Grid.Row="1" x:Name="ErrorsGrid" 
                              AutoGenerateColumns="False" 
                              IsReadOnly="True"
                              SelectionMode="Single"
                              Margin="5">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Час" Binding="{Binding Timestamp}" Width="150"/>
                            <DataGridTextColumn Header="Тип" Binding="{Binding ErrorType}" Width="150"/>
                            <DataGridTextColumn Header="Опис для користувача" Binding="{Binding UserFriendlyMessage}" Width="*"/>
                            <DataGridCheckBoxColumn Header="Вирішено" Binding="{Binding IsResolved, Mode=OneWay}" Width="80"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <GroupBox Grid.Row="2" Header="Детальна інформація" Margin="5" Height="150">
                        <ScrollViewer>
                            <TextBlock x:Name="ErrorDetailsText" TextWrapping="Wrap" Padding="5"/>
                        </ScrollViewer>
                    </GroupBox>
                </Grid>
            </TabItem>

            <!-- Вкладка Дорожня карта -->
            <TabItem Header="🗺️ Дорожня карта">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Панель вибору директорії -->
                    <GroupBox Grid.Row="0" Header="Вибір директорії" Margin="5" Padding="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="Директорія:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <ComboBox Grid.Column="1" x:Name="RoadmapDirectoryCombo" 
                                      DisplayMemberPath="Name" 
                                      SelectionChanged="RoadmapDirectoryCombo_SelectionChanged"/>
                            <Button Grid.Column="2" Content="🔍 Аналізувати" Click="AnalyzeForRoadmap_Click" 
                                    Margin="10,0,0,0" Padding="10,5"/>
                        </Grid>
                    </GroupBox>

                    <!-- Панель управління -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="5">
                        <Button Content="➕ Створити карту" Click="CreateRoadmap_Click"/>
                        <Button Content="📁 Завантажити" Click="LoadRoadmap_Click"/>
                        <Button Content="💾 Зберегти як JSON" Click="ExportRoadmapJson_Click"/>
                        <Button Content="🖼️ Зберегти як зображення" Click="ExportRoadmapImage_Click"/>
                        <Button Content="🗑️ Видалити" Click="DeleteRoadmap_Click"/>
                    </StackPanel>

                    <!-- Візуалізація timeline -->
                    <GroupBox Grid.Row="2" Header="Хронологічна карта подій" Margin="5">
                        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                            <ItemsControl x:Name="TimelineView">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="#2196F3" BorderThickness="0,0,0,2" Padding="10" Margin="5">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="150"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="{Binding EventDate, StringFormat='dd.MM.yyyy'}" 
                                                               FontWeight="Bold" Foreground="#2196F3"/>
                                                    <TextBlock Text="{Binding EventDate, StringFormat='HH:mm'}" 
                                                               FontSize="10" Foreground="Gray"/>
                                                    <TextBlock Text="{Binding Category}" 
                                                               FontSize="10" FontStyle="Italic" Foreground="Gray" Margin="0,5,0,0"/>
                                                </StackPanel>

                                                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                                    <TextBlock Text="{Binding Title}" FontWeight="Bold"/>
                                                    <TextBlock Text="{Binding Description}" 
                                                               TextWrapping="Wrap" Foreground="Gray" Margin="0,3,0,0"/>
                                                    <TextBlock Text="{Binding FilePath}" 
                                                               FontSize="10" Foreground="DarkGray" Margin="0,3,0,0"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </GroupBox>

                    <!-- Статистика -->
                    <GroupBox Grid.Row="3" Header="Статистика" Margin="5" Padding="10">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Всього подій:" Margin="0,0,5,0"/>
                            <TextBlock x:Name="TotalEventsText" Text="0" FontWeight="Bold" Margin="0,0,20,0"/>
                            <TextBlock Text="Період:" Margin="0,0,5,0"/>
                            <TextBlock x:Name="DateRangeText" Text="-" FontWeight="Bold"/>
                        </StackPanel>
                    </GroupBox>
                </Grid>
            </TabItem>

            <!-- Вкладка Зовнішні ресурси -->
            <TabItem Header="🌐 Зовнішні ресурси">
                <TabControl>
                    <!-- Під-вкладка: Мережа -->
                    <TabItem Header="🔌 Мережа">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
                                <Button Content="🔍 Сканувати мережу" Click="ScanNetwork_Click" Background="#2196F3" Foreground="White"/>
                                <Button Content="🔃 Оновити інтерфейси" Click="RefreshNetworkInterfaces_Click"/>
                                <TextBlock x:Name="ScanStatusText" Text="" VerticalAlignment="Center" Margin="10,0,0,0" Foreground="Gray"/>
                            </StackPanel>

                            <GroupBox Grid.Row="1" Header="Мережеві інтерфейси ПК" Margin="5">
                                <DataGrid x:Name="NetworkInterfacesGrid" 
                                          AutoGenerateColumns="False" 
                                          IsReadOnly="True">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Назва" Binding="{Binding Name}" Width="200"/>
                                        <DataGridTextColumn Header="IP адреса" Binding="{Binding IpAddress}" Width="150"/>
                                        <DataGridTextColumn Header="MAC адреса" Binding="{Binding MacAddress}" Width="150"/>
                                        <DataGridTextColumn Header="Тип" Binding="{Binding NetworkType}" Width="100"/>
                                        <DataGridCheckBoxColumn Header="Активний" Binding="{Binding IsActive, Mode=OneWay}" Width="80"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </GroupBox>

                            <GroupBox Grid.Row="2" Header="Пристрої в мережі" Margin="5">
                                <DataGrid x:Name="NetworkDevicesGrid" 
                                          AutoGenerateColumns="False" 
                                          IsReadOnly="True">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="IP адреса" Binding="{Binding IpAddress}" Width="150"/>
                                        <DataGridTextColumn Header="MAC адреса" Binding="{Binding MacAddress}" Width="150"/>
                                        <DataGridTextColumn Header="Ім'я хоста" Binding="{Binding HostName}" Width="*"/>
                                        <DataGridCheckBoxColumn Header="Онлайн" Binding="{Binding IsOnline, Mode=OneWay}" Width="80"/>
                                        <DataGridTextColumn Header="Останнє з'єднання" Binding="{Binding LastSeen, StringFormat='HH:mm:ss'}" Width="120"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </GroupBox>
                        </Grid>
                    </TabItem>

                    <!-- Під-вкладка: Зовнішні сервіси -->
                    <TabItem Header="☁️ API та сервіси">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
                                <Button Content="➕ Додати сервіс" Click="AddExternalService_Click"/>
                                <Button Content="✏️ Редагувати" Click="EditExternalService_Click"/>
                                <Button Content="🗑️ Видалити" Click="DeleteExternalService_Click"/>
                                <Button Content="🔌 Тест з'єднання" Click="TestExternalService_Click" Background="#4CAF50" Foreground="White"/>
                            </StackPanel>

                            <DataGrid Grid.Row="1" x:Name="ExternalServicesGrid" 
                                      AutoGenerateColumns="False" 
                                      IsReadOnly="True"
                                      SelectionMode="Single"
                                      Margin="5">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Назва" Binding="{Binding Name}" Width="150"/>
                                    <DataGridTextColumn Header="Тип" Binding="{Binding ServiceType}" Width="100"/>
                                    <DataGridTextColumn Header="URL" Binding="{Binding Url}" Width="*"/>
                                    <DataGridCheckBoxColumn Header="Активний" Binding="{Binding IsActive, Mode=OneWay}" Width="80"/>
                                    <DataGridTextColumn Header="Останнє використання" Binding="{Binding LastUsed, StringFormat='yyyy-MM-dd HH:mm'}" Width="150"/>
                                </DataGrid.Columns>
                            </DataGrid>

                            <TextBlock Grid.Row="2" Margin="10" TextWrapping="Wrap" Foreground="Gray">
                                💡 Підказка: Тут ви можете налаштувати API endpoints для відправки дорожніх карт та інших даних на зовнішні сервери.
                            </TextBlock>
                        </Grid>
                    </TabItem>
                </TabControl>
            </TabItem>

            <!-- Вкладка Налаштування -->
            <TabItem Header="⚙️ Налаштування">
                <StackPanel Margin="20">
                    <GroupBox Header="Загальні налаштування" Padding="10" Margin="0,0,0,20">
                        <StackPanel>
                            <CheckBox x:Name="AutoShareOnAddCheckbox" 
                                      Content="Автоматично відкривати доступ при додаванні директорії"
                                      Margin="0,5"/>
                            <CheckBox x:Name="EnableUpdateNotificationsCheckbox" 
                                      Content="Показувати повідомлення про оновлення програми"
                                      Margin="0,5"/>

                            <Button Content="💾 Зберегти налаштування" 
                                    Click="SaveSettings_Click" 
                                    HorizontalAlignment="Left" 
                                    Margin="0,15,0,0"
                                    Background="#4CAF50" 
                                    Foreground="White"/>
                        </StackPanel>
                    </GroupBox>

                    <GroupBox Header="Налаштування версіонування (Git)" Padding="10" Margin="0,0,0,20">
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Інтервал коміту (хвилин):"/>
                                <TextBox Grid.Row="0" Grid.Column="1" x:Name="CommitIntervalTextBox" 
                                         Text="720" Width="150" HorizontalAlignment="Left"/>
                                <Button Grid.Row="0" Grid.Column="2" Content="Зберегти" 
                                        Click="SaveCommitInterval_Click" Margin="10,5"/>
                                <TextBlock Grid.Row="0" Grid.Column="3" Text="(за замовчуванням: 720 = 12 годин)" 
                                           Foreground="Gray" FontStyle="Italic"/>

                                <Button Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" 
                                        Content="🔄 Виконати коміт зараз" 
                                        Click="ForceCommit_Click" 
                                        Background="#FF9800" Foreground="White"
                                        HorizontalAlignment="Left" Margin="5,10,5,5"/>
                            </Grid>
                        </StackPanel>
                    </GroupBox>

                    <GroupBox Header="Інформація про сервіс" Padding="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Час запуску:" FontWeight="Bold"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" x:Name="StartTimeText" Text="-"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Всього директорій:" FontWeight="Bold"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="TotalDirsText" Text="-"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Відкритих шарів:" FontWeight="Bold"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" x:Name="SharedDirsText" Text="-"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Зареєстрованих пристроїв:" FontWeight="Bold"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" x:Name="DevicesCountText" Text="-"/>

                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Останній коміт:" FontWeight="Bold"/>
                            <TextBlock Grid.Row="4" Grid.Column="1" x:Name="LastCommitText" Text="-"/>

                            <TextBlock Grid.Row="5" Grid.Column="0" Text="Інтервал коміту:" FontWeight="Bold"/>
                            <TextBlock Grid.Row="5" Grid.Column="1" x:Name="CommitIntervalText" Text="-"/>
                        </Grid>
                    </GroupBox>
                </StackPanel>
            </TabItem>
        </TabControl>

        <!-- Статус бар -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock x:Name="StatusBarText" Text="Готово"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>